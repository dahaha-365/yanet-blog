{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "theme": "opencode",
  "autoupdate": "notify",
  "server": {
    "port": 8080
  },
  "permission": {
    "read": "allow",
    "edit": "ask",
    "glob": "ask",
    "grep": "allow",
    "list": "allow",
    "bash": "ask",
    "task": "ask",
    "webfetch": "ask",
    "websearch": "ask",
    "codesearch": "ask",
    "skill": {
      "*": "allow"
    }
  },
  "command": {
    "dev": {
      "template": "pnpm docs:dev",
      "description": "启动 VuePress 开发服务器"
    },
    "build": {
      "template": "pnpm docs:build",
      "description": "构建生产版本"
    },
    "install": {
      "template": "pnpm install",
      "description": "安装项目依赖"
    }
  }
}
